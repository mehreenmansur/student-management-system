<%= wicked_pdf_stylesheet_link_tag "template1" -%>
<h3>Semesters</h3>
<hr>
<table class = "table table-bordered", class="text-right">
  <tr class="info">
    <th>Semester</th>
    <th>Status</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.name%></td>
        <td><%= semester.status%></td>
        <td><%= link_to '', edit_semester_path(semester), class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', semester_path(semester), method: :delete, data: {confirm: 'Are you sure?'}, class: "glyphicon glyphicon-trash btn btn-danger btn-xs" %></td>
      </tr>
  <% end %>
</table>
<%= link_to 'Add Semester', new_semester_path, class: "btn btn-default" %>
</br></br>
<h3>Courses</h3>
<hr>
<table class = "table table-bordered">
  <tr class="info">
    <th>Course</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @courses.each do |course| %>
      <tr>
        <td><%= course.name%></td>
        <td><%= link_to '', edit_course_path(course), class: "glyphicon glyphicon-edit" %></td>
        <td><%= link_to '', course_path(course), method: :delete, data: {confirm: 'Are you sure?'}, class: "glyphicon glyphicon-trash btn btn-danger btn-xs"%></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Add Course', new_course_path, class: "btn btn-default" %>
</br></br>
<h3>Semester-Course Mapping</h3>
<hr>
<table class = "table table-bordered" >
  <tr class="info">
    <th>#</th>
    <th>Semester</th>
    <th>Course</th>
  </tr>
  <% y = 1 %>
  <% @hash.each do |key, values| %>
      <tr>
        <td><%= y %></td>
        <td><%= key %></td>
        <td><% values.each do |v| %><%= v +' | '%><% end %></td>
      </tr>
      <% y+=1 %>
  <% end %>
</table>
<td><%= link_to 'Download CV', home_admins_path( :format => :pdf) , :format => :pdf %></td></br>
<td><%= link_to 'Preview CV', home_admins_path %></td>
