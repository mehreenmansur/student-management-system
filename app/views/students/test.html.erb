<h3>Offered Courses </h3>

<table class = "table table-bordered" >
  <tr>
    <th>#</th>
    <th>Semester</th>
    <th>Course</th>
  </tr>
  <% y = 1 %>
  <% @hash.each do |key, value| %>
      <tr>
        <td><%= y %></td>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
      <% y+=1 %>
  <% end %>
</table>